{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "404.html",
    "vite.config.ts",
    "tailwind.config.ts",
    "src/**/*.vue",
    "src/**/*.ts"
  ]
}
